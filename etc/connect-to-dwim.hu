#!/bin/sh

if [ -z "${REMOTE_USER_NAME}" ]; then
  REMOTE_USER_NAME="${USER}"
fi

ARGS=$@

if [ -z $ARGS ]; then
  ARGS="screen -Rd"
fi

CMD="ssh -t -C -Y -L 3000:localhost:3000 -L 3001:localhost:3001 -L 3002:localhost:5432 -o ControlPath=none -o ServerAliveInterval=60 ${REMOTE_USER_NAME}@dwim.hu $ARGS"

echo Executing $CMD

$CMD
